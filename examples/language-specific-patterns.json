{
  "csharp": {
    "commentLens.patterns": [
      {
        "id": "xml-summary",
        "name": "XML Summary",
        "pattern": "/// <summary>|/// <param>|/// <returns>|/// <exception>",
        "textColor": "#1976D2",
        "backgroundColor": "#E3F2FD",
        "enabled": true,
        "showTextColor": true,
        "showBackgroundColor": true,
        "overrideDefault": false
      },
      {
        "id": "csharp-todo",
        "name": "C# TODO",
        "pattern": "// TODO:|// HACK:|// NOTE:|// FIXME:",
        "textColor": "#F57C00",
        "backgroundColor": "#FFF3E0",
        "enabled": true,
        "showTextColor": true,
        "showBackgroundColor": true,
        "overrideDefault": false
      }
    ]
  },
