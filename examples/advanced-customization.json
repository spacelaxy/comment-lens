{
  "commentLens.patterns": [
    {
      "id": "api-endpoint",
      "name": "API Endpoint",
      "pattern": "@API|@api|@ENDPOINT|@endpoint|API:|Endpoint:",
      "textColor": "#2E7D32",
      "backgroundColor": "#E8F5E8",
      "enabled": true,
      "showTextColor": true,
      "showBackgroundColor": true,
      "overrideDefault": false
    },
    {
      "id": "database",
      "name": "Database Related",
      "pattern": "@DB|@db|@DATABASE|@database|@QUERY|@query",
      "textColor": "#1565C0",
      "backgroundColor": "#E3F2FD",
      "enabled": true,
      "showTextColor": true,
      "showBackgroundColor": true,
      "overrideDefault": false
    },
    {
      "id": "testing",
      "name": "Testing",
      "pattern": "@TEST|@test|@SPEC|@spec|@MOCK|@mock",
      "textColor": "#7B1FA2",
      "backgroundColor": "#F3E5F5",
      "enabled": true,
      "showTextColor": true,
      "showBackgroundColor": true,
      "overrideDefault": false
    },
    {
      "id": "optimization",
      "name": "Optimization",
      "pattern": "@OPTIMIZE|@optimize|@REFACTOR|@refactor|@IMPROVE|@improve",
      "textColor": "#F57C00",
      "backgroundColor": "#FFF3E0",
      "enabled": true,
      "showTextColor": true,
      "showBackgroundColor": true,
      "overrideDefault": false
    },
    {
      "id": "documentation",
      "name": "Documentation",
      "pattern": "@DOC|@doc|@README|@readme|@GUIDE|@guide",
      "textColor": "#5D4037",
      "backgroundColor": "#EFEBE9",
      "enabled": true,
      "showTextColor": true,
      "showBackgroundColor": true,
      "overrideDefault": false
    },
    {
      "id": "feature-request",
      "name": "Feature Request",
      "pattern": "@FEATURE|@feature|@ENHANCEMENT|@enhancement|@REQUEST|@request",
      "textColor": "#C2185B",
      "backgroundColor": "#FCE4EC",
      "enabled": true,
      "showTextColor": true,
      "showBackgroundColor": true,
      "overrideDefault": false
    },
    {
      "id": "breaking-change",
      "name": "Breaking Change",
      "pattern": "@BREAKING|@breaking|@BREAK|@break|BREAKING:|Breaking:",
      "textColor": "#D32F2F",
      "backgroundColor": "#FFEBEE",
      "enabled": true,
      "showTextColor": true,
      "showBackgroundColor": true,
      "overrideDefault": false
    }
  ],
  "commentLens.dividers": [
    {
      "id": "section-header",
      "name": "Section Header",
      "pattern": "=",
      "length": 100,
      "enabled": true,
      "textPosition": "center",
      "textPadding": 4
    },
    {
      "id": "subsection",
      "name": "Subsection",
      "pattern": "-",
      "length": 60,
      "enabled": true,
      "textPosition": "left",
      "textPadding": 2
    },
    {
      "id": "code-block",
      "name": "Code Block Separator",
      "pattern": "#",
      "length": 80,
      "enabled": true,
      "textPosition": "center",
      "textPadding": 1
    },
    {
      "id": "api-docs",
      "name": "API Documentation",
      "pattern": "*",
      "length": 120,
      "enabled": true,
      "textPosition": "center",
      "textPadding": 3
    },
    {
      "id": "warning-separator",
      "name": "Warning Separator",
      "pattern": "!",
      "length": 40,
      "enabled": true,
      "textPosition": "center",
      "textPadding": 1
    }
  ],
  "commentLens.commentBoxes": [
    {
      "id": "api-documentation",
      "name": "API Documentation Box",
      "topLeft": "┌",
      "topRight": "┐",
      "bottomLeft": "└",
      "bottomRight": "┘",
      "horizontal": "─",
      "vertical": "│",
      "enabled": true
    },
    {
      "id": "warning-box",
      "name": "Warning Box",
      "topLeft": "╔",
      "topRight": "╗",
      "bottomLeft": "╚",
      "bottomRight": "╝",
      "horizontal": "═",
      "vertical": "║",
      "enabled": true
    },
    {
      "id": "info-box",
      "name": "Information Box",
      "topLeft": "╭",
      "topRight": "╮",
      "bottomLeft": "╰",
      "bottomRight": "╯",
      "horizontal": "─",
      "vertical": "│",
      "enabled": true
    },
    {
      "id": "code-example",
      "name": "Code Example Box",
      "topLeft": "┏",
      "topRight": "┓",
      "bottomLeft": "┗",
      "bottomRight": "┛",
      "horizontal": "━",
      "vertical": "┃",
      "enabled": true
    }
  ]
}
