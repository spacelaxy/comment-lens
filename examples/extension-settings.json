{
  "commentLens.patterns": [
    {
      "id": "custom-todo",
      "name": "Custom TODO",
      "pattern": "@TODO|@todo|TODO:|todo:",
      "textColor": "#FF6B35",
      "backgroundColor": "#FFF3E0",
      "enabled": true,
      "showTextColor": true,
      "showBackgroundColor": true,
      "overrideDefault": false
    },
    {
      "id": "important",
      "name": "Important Note",
      "pattern": "@IMPORTANT|@important|IMPORTANT:|important:",
      "textColor": "#D32F2F",
      "backgroundColor": "#FFEBEE",
      "enabled": true,
      "showTextColor": true,
      "showBackgroundColor": true,
      "overrideDefault": false
    },
    {
      "id": "deprecated",
      "name": "Deprecated Code",
      "pattern": "@DEPRECATED|@deprecated|DEPRECATED:|deprecated:",
      "textColor": "#FFFFFF",
      "backgroundColor": "#424242",
      "enabled": true,
      "showTextColor": true,
      "showBackgroundColor": true,
      "overrideDefault": false
    },
    {
      "id": "performance",
      "name": "Performance Note",
      "pattern": "@PERF|@perf|PERF:|perf:|@PERFORMANCE|@performance",
      "textColor": "#7B1FA2",
      "backgroundColor": "#F3E5F5",
      "enabled": true,
      "showTextColor": true,
      "showBackgroundColor": true,
      "overrideDefault": false
    },
    {
      "id": "security",
      "name": "Security Warning",
      "pattern": "@SECURITY|@security|SECURITY:|security:|@SECURE|@secure",
      "textColor": "#E53935",
      "backgroundColor": "#FFCDD2",
      "enabled": true,
      "showTextColor": true,
      "showBackgroundColor": true,
      "overrideDefault": false
    },
    {
      "id": "review",
      "name": "Code Review",
      "pattern": "@REVIEW|@review|REVIEW:|review:|@CR|@cr",
      "textColor": "#1976D2",
      "backgroundColor": "#E3F2FD",
      "enabled": true,
      "showTextColor": true,
      "showBackgroundColor": true,
      "overrideDefault": false
    }
  ],
  "commentLens.dividers": [
    {
      "id": "custom-dash",
      "name": "Custom Dash Divider",
      "pattern": "-",
      "length": 80,
      "enabled": true,
      "textPosition": "center",
      "textPadding": 2
    },
    {
      "id": "custom-equals",
      "name": "Custom Equals Divider", 
      "pattern": "=",
      "length": 60,
      "enabled": true,
      "textPosition": "left",
      "textPadding": 1
    },
    {
      "id": "custom-asterisk",
      "name": "Custom Asterisk Divider",
      "pattern": "*",
      "length": 50,
      "enabled": true,
      "textPosition": "right",
      "textPadding": 3
    },
    {
      "id": "custom-hash",
      "name": "Custom Hash Divider",
      "pattern": "#",
      "length": 70,
      "enabled": true,
      "textPosition": "center",
      "textPadding": 1
    },
    {
      "id": "custom-tilde",
      "name": "Custom Tilde Divider",
      "pattern": "~",
      "length": 40,
      "enabled": true,
      "textPosition": "left",
      "textPadding": 2
    }
  ],
  "commentLens.commentBoxes": [
    {
      "id": "custom-box-simple",
      "name": "Simple Box",
      "topLeft": "/",
      "topRight": "\\",
      "bottomLeft": "\\",
      "bottomRight": "/",
      "horizontal": "-",
      "vertical": "|",
      "enabled": true
    },
    {
      "id": "custom-box-double",
      "name": "Double Box",
      "topLeft": "╔",
      "topRight": "╗",
      "bottomLeft": "╚",
      "bottomRight": "╝",
      "horizontal": "═",
      "vertical": "║",
      "enabled": true
    },
    {
      "id": "custom-box-rounded",
      "name": "Rounded Box",
      "topLeft": "╭",
      "topRight": "╮",
      "bottomLeft": "╰",
      "bottomRight": "╯",
      "horizontal": "─",
      "vertical": "│",
      "enabled": true
    }
  ]
}
